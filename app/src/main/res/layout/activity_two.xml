<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityTwo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="94.83dp"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="94.83dp"
                android:gravity="start">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|start"
                    app:contentInsetStart="0dp"
                    android:background="@color/my_secondary">
                    <LinearLayout
                        android:id="@+id/charge_wifi_reseau"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <FrameLayout
                            android:layout_width="150dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="220dp"
                            android:layout_marginRight="40dp"
                            android:layout_marginBottom="1.07dp">


                            <ImageView
                                android:id="@+id/wifi"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/wifi"
                                android:layout_gravity="top|start"
                                android:layout_marginLeft="49dp"
                                android:layout_marginBottom="4dp"
                                tools:ignore="ContentDescription"
                                android:scaleType="fitXY"/>

                            <ImageView
                                android:id="@+id/reseau"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="top|center"
                                android:layout_marginLeft="18dp"
                                android:layout_marginTop="0dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/reseau"
                                tools:ignore="ContentDescription" />

                            <ImageView
                                android:id="@+id/batterie"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/batterie"
                                android:layout_gravity="top|end"
                                android:layout_marginTop="4dp"/>
                        </FrameLayout>
                    </LinearLayout>
                </androidx.appcompat.widget.Toolbar>>


                <FrameLayout
                    android:layout_width="187dp"
                    android:layout_height="120dp"
                    android:layout_gravity="start"
                    android:layout_marginEnd="10dp">

                    <ImageView
                        android:id="@+id/faza_toolbar"
                        android:layout_width="178dp"
                        android:layout_height="95dp"
                        android:layout_gravity="start"
                        android:scaleType="fitXY"
                        tools:ignore="ContentDescription"
                        android:src="@drawable/faza_toolbar"/>
                    <TextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|start"
                        android:text="12:00"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="18dp"
                        android:layout_marginBottom="22dp"
                        android:layout_marginEnd="40dp"
                        android:textSize="23sp"
                        android:textStyle="bold" />
                </FrameLayout>>
            </FrameLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Medilink"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:textSize="60sp"
            android:textStyle="bold"
            android:textColor="@color/my_secondary"/>
        <ImageView
            android:id="@+id/coeur"
            android:layout_width="260dp"
            android:layout_height="300dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            app:srcCompat="@drawable/heart_layout2" />

        <Button
            android:id="@+id/btn_next"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Next"
            android:textSize="25dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_shape"/>


    </LinearLayout>

</RelativeLayout>